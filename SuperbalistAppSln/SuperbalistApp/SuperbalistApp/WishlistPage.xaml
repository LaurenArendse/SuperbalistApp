<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuperbalistApp.WishlistPage"
            IconImageSource="wishlistIcon.png">
  
    <ContentPage.Content>
        <ScrollView>
           <StackLayout>
                <Label Text="WISHLIST"
                       FontSize="Medium"
                       TextColor="Black"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center">
                </Label>

                <StackLayout Orientation="Horizontal">
                            <Label Text="Make your wishlist public"
                                   TextColor="Black"
                                   Margin="5"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Start"
                                   FontSize="Small" />

                                   <Switch x:Name="switch"
                                           HorizontalOptions="EndAndExpand" />
                </StackLayout>

           </StackLayout>
        </ScrollView>
    </ContentPage.Content>
   
</ContentPage>